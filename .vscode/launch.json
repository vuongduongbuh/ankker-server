    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch App",
            "stopOnEntry": true,
            "program": "${workspaceRoot}/src/index.ts",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "preLaunchTask": "build",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Seeder",
            "stopOnEntry": true,
            "program": "${workspaceRoot}/src/seed/index.ts",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "preLaunchTask": "build",
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}
